<suite name="Phase 1 TestNg Suite" verbose="10" configfailurepolicy="continue" preserve-order="true">

  <listeners>
    <listener class-name="com.ericsson.eo.evnfm.acceptance.testng.listeners.EvnfmTestNGListener"/>
  </listeners>

  <parameter name="testTargetClusterData" value="release-single/cismCluster/testTargetCluster.yaml"/>
  <parameter name="basicOnboardingData" value="phases/phase1Onboarding.yaml"/>
  <parameter name="instantiateData" value="phases/phase1Instantiate.yaml"/>

  <test name="Set up" parallel="none">
    <classes>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.cismcluster.BasicClusterTest">
        <methods>
          <include name="testRegisterCluster"/>
          <include name="testRegisterTestCluster"/>
        </methods>
      </class>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.onboarding.BasicOnboardingTest">
        <methods>
          <include name="testLicensesAvailable"/>
          <include name="testHealthCheck"/>
          <include name="testOnboardCsarRESTPhases"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Delete and onboard same package" parallel="none">
    <classes>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.onboarding.BasicOnboardingTest">
        <methods>
          <include name="testDeletePackageREST"/>
          <include name="testLicensesAvailable"/>
          <include name="testHealthCheck"/>
          <include name="testOnboardCsarRESTPhases"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Instantiate CNF" parallel="none">
    <classes>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.evnfmreleaseflow.instantiate.InstantiateRestTest">
        <methods>
          <include name="instantiateCNF"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Terminate and instantiate same CNF" parallel="none">
    <classes>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.evnfmreleaseflow.instantiate.InstantiateRestTest">
        <methods>
          <include name="terminateCNF"/>
          <include name="instantiateCNF"/>
        </methods>
      </class>
    </classes>
  </test>
</suite>