<suite name="Phase 2 TestNg Suite" verbose="10" configfailurepolicy="continue" preserve-order="true">

  <listeners>
    <listener class-name="com.ericsson.eo.evnfm.acceptance.testng.listeners.EvnfmTestNGListener"/>
  </listeners>

  <parameter name="testTargetClusterData" value="release-single/cismCluster/testTargetCluster.yaml"/>
  <parameter name="basicOnboardingData" value="phases/phase2Onboarding.yaml"/>
  <parameter name="upgradeData" value="phases/phase2Upgrade.yaml"/>
  <parameter name="instantiateData" value="phases/phase2Instantiate.yaml"/>

  <test name="Onboard package 2" parallel="none">
    <classes>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.onboarding.BasicOnboardingTest">
        <methods>
          <include name="testLicensesAvailable"/>
          <include name="testHealthCheck"/>
          <include name="testOnboardCsarRESTPhases"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Upgrade CNF to package 2 and Instantiate CNF from package 1" parallel="none">
    <classes>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.evnfmreleaseflow.upgrade.UpgradeRestTest"/>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.evnfmreleaseflow.instantiate.InstantiateRestTest">
        <methods>
          <include name="instantiateCNF"/>
          <include name="terminateCNF"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Clean up" parallel="none">
    <classes>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.onboarding.BasicOnboardingTest">
        <methods>
          <include name="testDeletePackagesRESTPhases"/>
        </methods>
      </class>
      <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.cismcluster.BasicClusterTest">
        <methods>
          <include name="testDeregisterTestCluster"/>
        </methods>
      </class>
    </classes>
  </test>
</suite>