<suite name="E-VNFM Release TestNg Single Suite" verbose="10" configfailurepolicy="continue" data-provider-thread-count="5">

    <listeners>
        <listener class-name="com.ericsson.eo.evnfm.acceptance.testng.listeners.EvnfmTestNGListener"/>
    </listeners>

    <parameter name="adminScaleData" value="release-single/adminScale/adminScale.yaml"/>
    <parameter name="basicLCMData" value="release-single/basicLCM/basicLCM.yaml"/>
    <parameter name="basicOnboardingData" value="release-single/onboarding.yaml"/>
    <parameter name="cnfHealData" value="release-single/heal/healRest.yaml"/>
    <parameter name="cnfScaleData" value="release-single/scale/scaleCnf.yaml"/>
    <parameter name="failOperationData" value="release-single/failOperation/failOperation.yaml"/>
    <parameter name="modifyVnfInfoRestData" value="release-single/modifyVnfInfo/modifyVnfInfoRest.yaml"/>
    <parameter name="modifyVnfInfoUIData" value="release-single/modifyVnfInfo/modifyVnfInfoUI.yaml"/>
    <parameter name="multipleScaleOperationData" value="release-single/scale/multipleScaleOperationTest.yaml"/>
    <parameter name="persistenceOfScalingData" value="release-single/scale/persistScaleAtUpgrade.yaml"/>
    <parameter name="persistenceOfScalingUIData" value="release-single/scale/persistenceOfScalingUI.yaml"/>
    <parameter name="rollbackAtFailureData" value="release-single/rollback/rollbackAtFailure.yaml"/>
    <parameter name="rollbackAtSuccessData" value="release-single/rollback/rollbackAtSuccess.yaml"/>
    <parameter name="testTargetClusterData" value="release-single/cismCluster/testTargetCluster.yaml"/>


    <test name="Set up" parallel="none">
        <classes>
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.cismcluster.BasicClusterTest">
                <methods>
                    <include name="testRegisterCluster"/>
                </methods>
            </class>
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.onboarding.BasicOnboardingTest">
                <methods>
                    <include name="testLicensesAvailable"/>
                    <include name="testOnboardCsarREST"/>
                    <include name="testVnfdZipOnboardedCorrectly"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="End to End Acceptance Tests" parallel="classes" thread-count="THREAD_COUNT">
        <classes>
<!--            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.ui.lcm.scale.MultipleScaleOperationTest"/>&lt;!&ndash;21 minutes&ndash;&gt;-->
<!--            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.ui.lcm.scale.AdminScaleUITest"/>&lt;!&ndash;15 minutes&ndash;&gt;-->
<!--            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.ui.lcm.scale.PersistenceOfScalingDataUITest"/>&lt;!&ndash;15 minutes&ndash;&gt;-->
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.lcm.rollback.RollbackAtSuccessTest"/><!--9 minutes-->
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.lcm.scale.ScaleSuccessTest"/><!--7 minutes-->
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.lcm.scale.PersistenceOfScalingDataTest"/><!--7 minutes-->
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.lcm.backuprestore.BackupRestoreOperationRestTest"/><!--5 minutes-->
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.lcm.rollback.RollbackAtFailureTest"/><!--4 minutes-->
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.lcm.modify.ModifyVnfInfoSuccessTest"/><!--4 minutes-->
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.lcm.rollback.FailOperationTest"/><!--4 minutes-->
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.lcm.BasicLCMTest"/><!--4 minutes-->
        </classes>
    </test>
    <test name="Clean up" parallel="none">
        <classes>
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.onboarding.BasicOnboardingTest">
                <methods>
                    <include name="testDeletePackageREST"/>
                </methods>
            </class>
            <class name="com.ericsson.eo.evnfm.acceptance.testng.tests.rest.cismcluster.BasicClusterTest">
                <methods>
                    <include name="testDeregisterCluster"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
